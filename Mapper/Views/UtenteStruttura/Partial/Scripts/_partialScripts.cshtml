    function changeHiddenField() {
        $("#codRegione").val($("#Regione").val());
        $("#codAzienda").val($("#Azienda").val());        
    }

    function VisualizzaDdl() {

        var idRuolo = $("#idRuolo").val();

        if (idRuolo == 1) {
            /*osservatore*/
            $("#divAzienda").show();
            $("#divTipoStruttura").show();
            $("#divPubblicaPrivata").show();
            $("#divStruttura").show();
            $("#divReparto").show();
        }
        else if (idRuolo == 2) {
            /*aziendale*/
            $("#divAzienda").show();
            $("#divTipoStruttura").hide();
            $("#divPubblicaPrivata").hide();
            $("#divStruttura").hide();
            $("#divReparto").hide();
        }
        else if (idRuolo == 3) {
            /*regionale*/
            $("#divAzienda").hide();
            $("#divTipoStruttura").hide();
            $("#divPubblicaPrivata").hide();
            $("#divStruttura").hide();
            $("#divReparto").hide();
        }
        else if (idRuolo == 4) {
            /*referente struttura*/
            $("#divAzienda").show();
            $("#divTipoStruttura").show();
            $("#divPubblicaPrivata").show();
            $("#divStruttura").show();
            $("#divReparto").hide();

            }
        else if (idRuolo == 5) {
            /*non associato*/
            $("#divAzienda").hide();
            $("#divTipoStruttura").hide();
            $("#divPubblicaPrivata").hide();
            $("#divStruttura").hide();
            $("#divReparto").hide();
        }
    }

