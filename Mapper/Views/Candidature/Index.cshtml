
@{
    ViewBag.Title = "Mapper - Cerca Candidature";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.TitleMin = "Candidature";
    ViewBag.isHome = true;
    ViewBag.PathBack = "";
}

@using (Html.BeginForm("Cerca", "Candidature", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div id="collapseDiv1-sc1" class="collapse-div collapse-background-active" role="tablist">
        <div class="collapse-header" id="heading1-sc1">
            <button data-toggle="collapse" data-target="#collapse1-sc1" aria-expanded="true" aria-controls="collapse1-sc1" type="button">
                Mostra/Nascondi filtri di ricerca candidature
            </button>
        </div>
        <div id="collapse1-sc1" class="collapse show" role="tabpanel" aria-labelledby="heading1-sc1">
            <div class="collapse-body">
                <br />
                <div class="row">
                    <div class="it-datepicker-wrapper col-lg-3">
                        <div class="form-group">
                            <input class="form-control it-date-datepicker" id="DataDal" name="DataDal" type="datetime" placeholder="gg/mm/aaaa">
                            <label for="DataDal">Data candidatura dal</label>
                        </div>
                    </div>
                    <div class="it-datepicker-wrapper col-lg-3">
                        <div class="form-group">
                            <input class="form-control it-date-datepicker" id="DataAl" name="DataAl" type="datetime" placeholder="gg/mm/aaaa">
                            <label for="DataAl">Data candidatura al</label>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row form-group bootstrap-select-wrapper myRegione @(!String.IsNullOrEmpty((String)ViewBag.EnableRegione) ? "disabled": "")">
                    <label class="control-label" for="Regione">Regione</label>
                    @Html.DropDownList("Regione", null, " -- Seleziona una regione --", htmlAttributes: new { @class = "form-control", data_show_subtext = "true", data_live_search = "true" }).SetDisabled(!String.IsNullOrEmpty((String)ViewBag.EnableRegione))
                    @Html.Hidden("codRegione")
                </div>
                <br />
                <div class="row form-group bootstrap-select-wrapper myAzienda ">
                    <label class="control-label" for="Azienda">Azienda</label>
                    @Html.DropDownList("Azienda", null, " -- Seleziona un'azienda --", htmlAttributes: new { @class = "form-control", data_show_subtext = "true", data_live_search = "true" })
                    @Html.Hidden("codAzienda")
                </div>
                <br />
                <div class="row form-group bootstrap-select-wrapper myTipoStruttura">
                    <label class="control-label" for="TipoStruttura">Tipo struttura</label>
                    @Html.DropDownList("TipoStruttura", null, " -- Seleziona un tipo di struttura --", htmlAttributes: new { @class = "form-control ", data_show_subtext = "true", data_live_search = "true" })
                    @Html.Hidden("codTipoStruttura")
                </div>
                <br />
                <div class="row form-group col-lg-3 bootstrap-select-wrapper">
                    <label class="control-label" for="PubblichePrivate">Pubbliche / Private</label>
                    @Html.DropDownList("PubblicaPrivata", null, null, htmlAttributes: new { @class = "form-control", data_show_subtext = "true", data_live_search = "true", aria_label = "Cancellate" })
                </div>
                <br />
                <div class="row form-group bootstrap-select-wrapper myStruttura">
                    <label class="control-label" for="Struttura">Struttura</label>
                    @Html.DropDownList("Struttura", null, " -- Seleziona una struttura --", htmlAttributes: new { @class = "form-control ", data_show_subtext = "true", data_live_search = "true" })
                    @Html.Hidden("codStruttura")
                </div>
                <br />
                <div class="row form-group col-lg-6">
                    <label class="control-label" for="cognome">Cognome </label>
                    @Html.TextBox("Cognome", null, " -- Cognome utente --", htmlAttributes: new { @maxlength = "50", @class = "form-control", data_show_subtext = "true", data_live_search = "true" })
                </div>
                <br />
                <div class="row form-group col-lg-6">
                    <label class="control-label" for="nome">Nome </label>
                    @Html.TextBox("Nome", null, " -- Nome utente --", htmlAttributes: new { @maxlength = "50", @class = "form-control", data_show_subtext = "true", data_live_search = "true" })
                </div>
                <div class="row form-group col-lg-6">
                    <label class="control-label" for="CodiceFiscale">Codice Fiscale </label>
                    @Html.TextBox("CodiceFiscale", null, " -- Codice Fiscale utente --", htmlAttributes: new { @maxlength = "50", @class = "form-control", data_show_subtext = "true", data_live_search = "true" })
                </div>
                <br />
                @*<div class="row form-group col-lg-4 bootstrap-select-wrapper">
                    <label class="control-label" for="Stato">Stato</label>
                    @Html.DropDownList("Pubblico", null, " -- Seleziona tipo utente --", htmlAttributes: new { @class = "form-control", data_show_subtext = "true", data_live_search = "true" })
                </div>
                <br />*@
                <div class="row form-group col-lg-6 bootstrap-select-wrapper">
                    <label class="control-label" for="idRuolo">Profilo </label>
                    @Html.DropDownList("IdRuolo", null, " -- Seleziona un profilo --", htmlAttributes: new { @class = "form-control", data_show_subtext = "true", data_live_search = "true", aria_label = "Profilo" })
                </div>
                <br />
                <div class="row form-group col-lg-4 bootstrap-select-wrapper">
                    <label class="control-label" for="Stato">Stato</label>
                    @Html.DropDownList("Stato", null, null, htmlAttributes: new { @class = "form-control", data_show_subtext = "true", data_live_search = "true" })
                </div>
                <br />
                <div class="row">
                    <div class="btn-group-toggle">
                        <button name="btnCerca" id="btnCerca" type="submit" title="Applica filtro" class="btn btnCerca btn-icon">
                            <span class="rounded-icon">
                                <svg class="icon icon-primary">
                                    <use xlink:href="~/bootstrapitalia/svg/sprite.svg#it-funnel"></use>
                                </svg>
                            </span>
                            <span>Applica filtro</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<br />

@Html.Partial("Partial/_partialRisultati")

@Html.Partial("Partial/Scripts/_partialScripts")



